{
  "interface": "",
  "interfaces": ["en0"],
  "start_zeek": true,
  "zeek_use_sudo": true,
  "log_dir": "./logs",
  "ollama": {
    "enabled": true,
    "url": "http://127.0.0.1:11434/api/generate",
    "model": "llama3:latest",
    "timeout_sec": 90
  },
  "alerts": {
    "output_dir": "./alerts",
    "cooldown_sec": 30,
    "llm_bypass_gate_severities": ["high", "critical"],
    "llm_bypass_gate_types": []
  },
  "knockknock": {
    "enabled": true,
    "sequence_ports": [2222, 3333, 4444],
    "window_sec": 10,
    "armed_ttl_sec": 300,
    "admin_ip": "",
    "local_ips": []
  },
  "anomaly": {
    "scan_window_sec": 30,
    "scan_unique_ports_threshold": 12,
    "scan_unique_hosts_threshold": 12,
    "scan_failed_threshold": 10,
    "scan_excluded_ports": [5353, 15600],
    "scan_ignore_multicast_dest": true,
    "dns_window_sec": 60,
    "dns_unique_domains_threshold": 20,
    "dns_long_domain_len": 50,
    "dns_nxdomain_threshold": 8,
    "dns_ignore_suffixes": [".local", ".arpa"],
    "new_asn_country_enabled": false,
    "tls_burst_without_data_enabled": false,
    "beaconing_enabled": false
  }
}
